@model IEnumerable<ABMCursos.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h1>Cursos</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Curso</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombrecurso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profesor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidadalumnos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombrecurso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profesor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidadalumnos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dia)
                    </td>
                    <td>
                        @item.Horario.ToString("hh\\:mm")
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Idcurso">
                            <i class="fas fa-edit"></i> Editar
                        </a> |
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Idcurso">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Idcurso">
                            <i class="fas fa-trash-alt"></i> Borrar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

