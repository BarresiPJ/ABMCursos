@model ABMCursos.Models.Curso

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Curso</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombrecurso" class="control-label"></label>
                <input asp-for="Nombrecurso" class="form-control" />
                <span asp-validation-for="Nombrecurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profesor" class="control-label"></label>
                <input asp-for="Profesor" class="form-control" />
                <span asp-validation-for="Profesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidadalumnos" class="control-label"></label>
                <input asp-for="Cantidadalumnos" class="form-control" />
                <span asp-validation-for="Cantidadalumnos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label"></label>
                <input asp-for="Dia" class="form-control" />
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
